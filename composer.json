{
    "name": "thuraaung2493/weight-conversions",
    "description": "Weight conversions in php.",
    "keywords": [
        "php",
        "weight-conversions"
    ],
    "homepage": "https://github.com/thuraaung2493/weight-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Thura Aung",
            "email": "thuraaung2493@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "ThuraAung2493\\WeightConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ThuraAung2493\\WeightConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
